# Backend Environment Variables Template
# Copy this file to .env and fill in the values

# Security Warning: Keep the secret key used in production secret!
SECRET_KEY=your-secret-key-here

# Set to True for development, False for production
DEBUG=False

# Space-separated list of allowed hosts
# Example: mtaabiz-api.onrender.com localhost 127.0.0.1
ALLOWED_HOSTS=

# Database URL (e.g., PostgreSQL from Render/Heroku)
# Example: postgres://user:password@host:port/dbname
DATABASE_URL=sqlite:///db.sqlite3

# Space-separated list of allowed origins for CORS
# Example: https://mtaabiz.vercel.app http://localhost:5173
CORS_ALLOWED_ORIGINS=
